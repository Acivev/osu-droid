<resources>

    <!--Global attributes-->
    <attr name="beatSync" format="boolean"/>

    <!--Views-->
    <declare-styleable name="TextButton">
        <attr name="buttonText" format="string"/>
        <attr name="buttonColor" format="color"/>
        <attr name="beatSync"/>
    </declare-styleable>

    <declare-styleable name="LogoView">
        <attr name="beatSync"/>
    </declare-styleable>

    <declare-styleable name="StripsEffectView">
        <attr name="beatSync"/>
        <attr name="stripWidth" format="dimension"/>
        <attr name="stripSpeed" format="float"/>
        <attr name="spawnTime" format="integer"/>
        <attr name="spawnLimit" format="integer"/>
    </declare-styleable>

    <declare-styleable name="FlashEffectView">
        <attr name="beatSync"/>
    </declare-styleable>

</resources>