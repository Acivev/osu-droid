<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationZ="@dimen/middleLayer"
    tools:background="#FFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/beatmapPanelContentWidth">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bl_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/beatmapListLeftMargin"
            tools:listitem="@layout/beatmap_list_item" />

    </RelativeLayout>

    <com.reco1l.view.LogoView
        android:id="@+id/bl_logo"
        android:layout_width="@dimen/beatmapListLogoSize"
        android:layout_height="@dimen/beatmapListLogoSize"
        android:layout_marginRight="@dimen/_minus24sdp"
        android:layout_marginBottom="@dimen/_minus40sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>