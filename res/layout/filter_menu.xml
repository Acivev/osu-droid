<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationZ="@dimen/topLayer">

    <androidx.cardview.widget.CardView
        android:id="@+id/seb_body"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topBarHeight"
        android:gravity="center_horizontal"
        app:cardBackgroundColor="@color/backgroundSecondary"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/S">

            <com.reco1l.view.TextButton
                android:id="@+id/fm_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:buttonText="Filter" />

            <EditText
                android:id="@+id/fm_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginVertical="@dimen/XS"
                android:background="@drawable/shape_rounded"
                android:backgroundTint="@color/backgroundTertiary"
                android:drawableStart="@drawable/v_search"
                android:drawablePadding="@dimen/S"
                android:hint="@string/menu_search_filter"
                android:imeOptions="flagNoExtractUi|flagNoFullscreen"
                android:minWidth="@dimen/_240sdp"
                android:paddingHorizontal="@dimen/M"
                android:textAppearance="@style/text" />

            <com.reco1l.view.TextButton
                android:id="@+id/fm_folders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:buttonText="Folder" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>