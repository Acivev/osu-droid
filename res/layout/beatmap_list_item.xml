<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="#FFF"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/bl_itemBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/XXS"
        android:layout_marginLeft="@dimen/M"
        android:layout_marginRight="@dimen/_M"
        app:cardBackgroundColor="@color/backgroundSecondary"
        app:cardCornerRadius="@dimen/globalCorners">

        <RelativeLayout
            android:id="@+id/bl_trackLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/beatmapListItemHeight">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bl_stars"
                    style="@style/propertyBadge"
                    android:layout_marginStart="@dimen/M"
                    android:drawableStart="@drawable/v_star_xs"
                    android:text="00.0" />

                <TextView
                    android:id="@+id/bl_difficulty"
                    style="@style/text"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/S"
                    android:layout_marginRight="@dimen/XXL"
                    android:paddingLeft="@dimen/XXS"
                    android:maxLines="2"
                    android:text="difficulty" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bl_beatmapLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/beatmapListItemHeight"
            android:visibility="gone">

            <ImageView
                android:id="@+id/bl_songBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.40"
                android:background="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/M"
                android:layout_marginRight="@dimen/XXL"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bl_title"
                    style="@style/text"
                    android:layout_marginBottom="@dimen/XXS"
                    android:singleLine="true"
                    android:text="title"
                    android:textSize="@dimen/textM"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bl_artist"
                        style="@style/text"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/bl_mapper"
                        android:singleLine="true"
                        android:text="by artist"
                        android:textColor="@color/textSecondary" />

                    <TextView
                        android:id="@+id/bl_mapper"
                        style="@style/propertyBadge"
                        android:layout_alignParentRight="true"
                        android:drawableStart="@drawable/v_person_xs"
                        android:text="mapper" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
